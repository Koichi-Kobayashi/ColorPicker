<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>
		net48;
		net6.0-windows;
		net7.0-windows;
		net8.0-windows;
		net9.0-windows;
		net10.0-windows
	</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- NuGet 基本情報 -->
    <PackageId>ColorPicker.Controls</PackageId>
    <Version>1.0.0</Version>
    <Authors>Koba</Authors>
    <Description>
      WinUI-style ColorPicker for WPF (HSV, Alpha, Palette, RGB/RGBA copy)
    </Description>

    <PackageTags>wpf;colorpicker;ui;control</PackageTags>
    <RepositoryUrl>https://github.com/Koichi-Kobayashi/ColorPicker.git</RepositoryUrl>

    <!-- ビルド時に nupkg を作る -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

</Project>
